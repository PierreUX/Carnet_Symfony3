{% extends "AdresseBundle::layout.html.twig" %}

{% block title %}Modification {% endblock %}

{% block body %}
<h1>Modification d'une personne</h1>
{{ form_start(form) }}
	<div class="form-group">
		{{ form_row(form.nom) }}
	</div>
	<div class="form-group">
		{{ form_row(form.prenom) }}
	</div>
	<div class="form-group">
		{{ form_row(form.login) }}
	</div>
	<div class="form-group">
		{{ form_row(form.password) }}
	</div>
	<div class="form-group">
		{{ form_row(form.email) }}
	</div>
	<div class="form-group">
		{{ form_row(form.sauvegarder) }}
	</div>
{{ form_end(form) }}
{% endblock %}