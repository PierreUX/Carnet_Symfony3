{% block title %}Affichage{% endblock %}

{% block body %}
<div class="jumbotron">
	<p>nom : 
	{{ personnes.nom }}
	</p>
	<p>pr√©nom : 
	{{ personnes.prenom }}
	</p>
	<p>email : 
	{{ personnes.email }}
	</p>
	{% if personnes.id == idSession %}
	<p>login :
	{{ personnes.login }}
	</p>
